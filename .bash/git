# automatically create aliases from git config
galias () {
  # TODO: optimize it
  aliases=`git config --global --get-regexp 'alias.*'|cut -f1 -d' '|cut -f2 -d'.'`
  for a in ${aliases}; do 
    local _alias=${1:-:}${a}
    local cmd=`git config alias.$a|cut -f1 -d ' '`
    alias "$_alias"="git $a"
    complete -o default -o nospace -F _git_$cmd $_alias # allow git-completion to work with alias as well
  done
}
